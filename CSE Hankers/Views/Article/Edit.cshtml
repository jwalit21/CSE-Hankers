@model CSE_Hankers.Models.Article

@{
    ViewData["Title"] = "Edit";
}


<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto mt-4 mb-4">
            <a asp-action="Index" class="btn btn-outline-light">Back to List</a><br />
            <form asp-action="Edit" class="border-light mt-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="articleId" />
                <input type="hidden" asp-for="likes" />
                <div class="form-group">
                    <label asp-for="title" class="control-label text-white"></label>
                    <input asp-for="title" class="form-control" />
                    <span asp-validation-for="title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="description" class="control-label text-white"></label>
                    <div style=" background-color: #e1e1e1;">
                        <textarea id="MDDescription" rows="20" cols="60"
                                  name="MDDescription" class="form-control">@Markdown.ParseHtmlString(Model.description)</textarea>
                        <span asp-validation-for="description" class="text-danger"></span>
                    </div>
                </div>
                <input asp-for="description" id="description" type="hidden" />
                <div class="form-group">
                    <input type="submit" value="Save" id="submitBtn" class="btn btn-primary w-25" />
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    <script type="text/javascript">

        // initialization of markdown editor with the custom toolbar
        let simpleMDE = new SimpleMDE({
            element: document.getElementById("MDDescription"),
            toolbar: ["bold", "italic", "heading", "preview"],
        });
        //simpleMDE.value("@Model.description");
        //document.getElementById("description").value = simpleMDE.value();

        $("#submitBtn").click(function validate() {
            console.log(simpleMDE.value());
            document.getElementById("description").value = simpleMDE.value();
        });

    </script>
}
