@inject SignInManager<ApplicationUser> signInManager
@inject UserManager<ApplicationUser> userManager

@model PaginatedList<CSE_Hankers.Models.Article>

@{
    ViewData["Title"] = "Articles";
}

<div class="container mt-4 bt-4">
    <p class="ml-3">
        <a asp-action="Create" class="btn btn-primary">Publish New</a> | <a asp-action="MyArticles" class="btn btn-success">My Articles</a>
    </p>

    <div class="container mt-2 mb-2 ">
        @foreach (var item in Model)
        {
            <div class="row mt-2 mb-3">
                <div class="col-md-12 col-sm-12">
                    <a asp-action="Details" asp-route-id="@item.articleId" style="text-decoration:none !important;" class="text-dark">
                        <div class="card rounded shadow" style="background-color: #e1e1e1;">
                            <div class="card-header card-header-own">
                                <div class="row">
                                    <div class="col-10">
                                        <h5 class="card-title pt-2">@item.title</h5>
                                        <object><a asp-action="Profile" asp-controller="Account" asp-route-username="@item.author.UserName"><p class="text-muted text-right">- @item.author.name </p></a></object>
                                    </div>
                                    <div class="col-2">
                                        <div class="row">
                                            <div class="col-6">
                                                <object><a asp-action="Profile" asp-controller="Account" asp-route-username="@item.author.UserName"><img src="~/Images/Profiles/@item.author.photoPath" class="rounded-circle" style="height: 50px; width:50x; margin-bottom: -160px; margin-left:-110px;" /></a></object>
                                            </div>
                                            <div class="col-6">
                                                <div class="row">
                                                    &#9650;
                                                </div>
                                                <div class="row"> @item.likes</div>
                                                <div class="row">
                                                    &#9660;
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                @{
                                    int markdownLen = item.description.Length;
                                    int len = markdownLen > 250 ? 250 : markdownLen;
                                    bool isLong = markdownLen > 250 ? true : false;
                                }
                                <p class="card-text">
                                    <span>@Markdown.ParseHtmlString(item.description.Substring(0, len))</span>
                                    @if (isLong)
                                    {
                                        <span><a asp-action="Details" asp-route-id="@item.articleId">View more...</a></span>
                                    }
                                </p>
                            </div>
                            @*                          <div class="ml-3 mb-3 text-right">
            <a class="btn btn-secondary rounded-pill badge-pill" asp-action="Edit" asp-route-id="@item.articleId">Edit</a>
            <a class="mr-3 btn btn-danger rounded-pill badge-pill" asp-action="Delete" asp-route-id="@item.articleId">Delete</a>
        </div>*@
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>

    @{
        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    }

    <a asp-action="Index"
       asp-route-pageNumber="@(Model.PageIndex - 1)"
       class="btn btn-light ml-3 rounded-pill @prevDisabled">
        Previous
    </a>
    <a asp-action="Index"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       class="btn btn-light ml-3 rounded-pill @nextDisabled">
        Next
    </a>
</div>

